
{% extends 'base.html.twig' %}

{% block title %}Prestaties{% endblock %}

{% block body %}

<div class="btn__new--right--bottom">
    <a href="{{path('createTask')}}" class="btn btn-primary btn-block">+ Nieuw</a>
</div>
    <div class="row">
        <div class="col-md-12">
            <div class="bgc-white bd bdrs-3 p-20">
                <h4 class="c-grey-900 mB-20">Prestaties</h4>
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col">Prestatie id</th>
                        <th scope="col">Klant bedrijfsnaam</th>
                        <th scope="col">Beschrijving</th>
                        <th scope="col">Totaal kost</th>
                        <th scope="col">Totaal uren</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for task in tasks %}
                        <tr onclick="window.location.href='{{ path('editTask', {taskId: task.id}) }}'" class="clickable">
                            <th scope="row">{{ task.id }}</th>
                            <td>{{ task.client.companyName }} </td>
                            <td>{{ task.description }} </td>
                            <td>{{ task.totalCost|number_format(2, ',', ' ') }} </td>
                            <td>{{ task.totalHours }} </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}