{% extends 'base.html.twig' %}

{% block title %}Nieuwe Klant{% endblock %}

{% block body %}

    <div class="bgc-white p-20 bd">
        <h6 class="c-grey-900">Freelancer Gegevens</h6>
        <div class="mT-30">
            {{ form_start(form) }}
            <div class="form-row">

                {% if form.freelancerId is defined %}
                    {{ form_row(form.freelancerId) }}
                {% endif %}
                <div class="form-group col-md-6">
                    {{ form_label(form.email) }} {{ form_widget(form.email, {'attr': {'class': 'form-control','id':'inputEmail4'}}) }}
                </div>
                <div class="form-group col-md-6">

                    {{ form_label(form.password,'Wachtwoord') }} {{ form_widget(form.password, {'attr': {'class': 'form-control','id':'inputPassword4'}}) }}
                    <div class="form-check"><label class="form-check-label"><input class="form-check-input" id="show_password" type="checkbox"> Toon wachtwoord</label></div>
                </div>
                                <div class="form-group col-md-6">
                                    {{ form_label(form.transportCost,'Transport kost') }} {{ form_widget(form.transportCost, {'attr': {'class': 'form-control','id':'inputTransportCost1'}}) }}
                                </div>

                                <div class="form-group col-md-6">
                                    {{ form_label(form.hourRate, 'Uur tarief') }} {{ form_widget(form.hourRate, {'attr': {'class': 'form-control','id':'inputhourRate1'}}) }}
                                </div>

                <div class="alert alert-danger remove" id="error_message" role="alert">Wachtwoorden moeten zelfde zijn!</div>
            </div>
            {{ form_widget(form.save, {'attr':{"class":"btn btn-primary"},'label': 'Opslaan'}) }}

            {% if form.freelancerId is defined  %}
                <a class="btn btn-danger"  href="{{ path('deleteFreelancer',{user: user.id}) }}">Verwijder</a>
            {% endif %}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
